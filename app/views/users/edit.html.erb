<!DOCTYPE html>
<html>
  <head>
    <title></title>
  </head>
  <body>
    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h2 class="text-center">Edit your account details</h2>
          <br>
          <div class="panel panel-primary">
            <div class="panel-body">
              <%= form_for @user, :html => {:class => "form-horizontal"} do |form| %>
              <%= render 'shared/error_messages', object: @user %>
             
              <div class="form-group">
                <%= form.label :name, class: "col-lg-2 control-label" %>
                <div class="col-lg-10">
                <%= form.text_field :name, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= form.label :playa_name, class: "col-lg-2 control-label" %>
                <div class="col-lg-10">
                <%= form.text_field :playa_name, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= form.label :email, class: "col-lg-2 control-label" %>
                <div class="col-lg-10">
                <%= form.text_field :email, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= form.label :password, class: "col-lg-2 control-label" %>
                <div class="col-lg-10">
                <%= form.password_field :password, class: "form-control" %>
                </div>
              </div>
              <p> These items are optional</p>
              <div class="form-group">
                <%= form.label :phone, class: "col-lg-2 control-label" %>
                <div class="col-lg-10">
                <%= form.text_field :phone, class: "form-control" %>
                </div>
              </div>
              <div class="form-group">
                <%= form.label :facebook, class: "col-lg-2 control-label" %>
                <div class="col-lg-10">
                <%= form.text_field :facebook, class: "form-control", placeholder: "ie http://www.facebook.com/john.doe" %>
                </div>
              </div>
              <div class="form-group">
                <%= form.label :description, class: "col-lg-2 control-label" %>
                <div class="col-lg-10">
                <%= form.text_area :description, class: "form-control" %>
                </div>
              </div>
 
 <div class="form-group">
                <%= form.label " ", class: "col-lg-2 control-label" %>
                <div class="col-lg-10">
              <%= form.button 'Submit', class: "btn btn-success" %> &nbsp; <%= link_to "Cancel", user_path, class: "btn btn-warning"  %> 
                </div>
              </div>
 

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>