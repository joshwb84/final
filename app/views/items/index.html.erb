<% provide(:title, 'Inventory') %>
<h1> The library currently has <b><%= @inventories.count %></b> items </h1>
<div class="container">
<!-- Example row of columns -->
<div class="row">
<table class="table table-striped table-hover ">
   <thead>
      <tr>
         <th>Category</th>
         <th>Item Name</th>
         <th>Desc</th>
         <th>Storage spot</th>
         <th>identifier</th>
         <th>Available?</th>
         <th></th>
      </tr>
   </thead>
   <tbody>
      <% @inventory.each do |item| %>
      <tr>
         <td><%= link_to item.category.name, category_path( item.category_id)%></td>
         <td><a href="/items/<%= item.id %>"><%= item.name %></a></td>
         <td><%= item.description %></td>
         <td><%= item.storage %></td>
         <td><%= item.identifier %></td>
         <td></td>
         <td><%= link_to "Edit", edit_item_path(item) %></td>
      </tr>
      <% end %>
   </tbody>
</table>
<div class="container">
   <!-- Example row of columns -->
   <div class="row">
      <div class=".col-md-6 .col-md-offset-3">
         <div class="btn-toolbar">
            <div class="btn-group">
               <%= link_to "Add an item", new_item_path, class: "btn btn-lg btn-primary" %>
            </div>
         </div>
      </div>
   </div>
</div>
