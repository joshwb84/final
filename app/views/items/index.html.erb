<% provide(:title, 'Inventory') %>


<h1> The inventory contains <b><%= @inventory.count %></b> items </h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
     
      <th>Category</th>
      <th>Item Name</th>
      <th>Desc</th>
      <th>Storage spot</th>
      <th>identifier</th>
         <th>Available?</th>
          </tr>
  </thead>
  <tbody>
  <% @inventory.each do |item| %>

    <tr>
      <td><%= item.category_id%></td>
      <td><a href="/items/<%= item.id %>"><%= item.name %></a></td>
      <td><%= item.description %></td>
      <td><%= item.storage %></td>
      <td><%= item.identifier %></td>
       <td></td>
      
    </tr>
<% end %>
  </tbody>
</table> 



 <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            <div class=".col-md-6 .col-md-offset-3">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <a href="/items/new" class="btn btn-lg btn-primary">Add an item</a>
                    </div>
                </div>


            </div>
        </div>
    </div>


