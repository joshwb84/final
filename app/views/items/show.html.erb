<% provide(:title, @item.name) %>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <b>
      Item Name: </b>
      <%= @item.name %><br>
      <b>
      Category: </b>
      <%= @item.category.name %><br>
      <b>
      Identifier date: </b>
      <%= @item.identifier %><br>
      <b>
      Item description:</b>
      <%= @item.description %><br>
      <br>
      <b>Comments:</b>
      <% @comments.each do |comment| %>
      <p> <%= comment.user.playa_name %> says: 
      </p>
      <p class="text-warning"><%= comment.body %></p>
      <% end%>
    </div>
    <div class="col-md-6">
      <b>
      Storage: </b>
      <%= @item.storage %><br>
      <b>
      Owner: </b>
      <%= @item.owner %><br>
      <b>
      purchase date: </b>
      <%= @item.purchase_date %><br>
      <b>
      Purchase price: </b>
      <%= @item.purchase_price %><br>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class=".col-md-6 .col-md-offset-2">
      <%= link_to "Edit item in library", edit_item_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>