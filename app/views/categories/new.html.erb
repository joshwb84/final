<% provide(:title, 'Add Category') %>
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <div class="container">
        <!-- Example row of columns -->

        <div class="row">

<% if @category.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><b><%= message %></b></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <legend><h1> Add a category</h1></legend>

         <%= form_for @category do |form|%>

  <div class="form-group">
    <%= form.label :name, class: "col-lg-2 control-label" %>
   <%= form.text_field :name, class: "form-control", placeholder: "Please enter a simple and distinct name" %>
  </div>

   <div class="form-group">
    <%= form.label :description, class: "col-lg-2 control-label" %>
   <%= form.text_area :description, class: "form-control", placeholder: "Please enter a detailed description so people understand the items that exist in this category" %>
  </div>

  <%= form.button 'Add Category', class: "btn btn-primary" %>
 </div>
<% end %>
        
    </div>
</body>
</html>
