
<div class="container">
   <!-- Example row of columns -->
   <div class="row">
      <div class="col-md-6 col-md-offset-3">
         <h2 class="text-center">Sign into your account</h2>
         <div class="panel panel-primary">
            <div class="panel-body">

 <%= form_tag sessions_path, class: "form-horizontal" do %>
               <div class="form-group">
                  <%= label_tag :email, "Email", class: "col-lg-2 control-label" %>
                  <div class="col-lg-10">
                     <%= text_field_tag :email, "", class: "form-control", placeholder: "Email Address" %>
                  </div>
               </div>
               <div class="form-group">
                  <%= label_tag :password, "Password", class: "col-lg-2 control-label" %>
                  <div class="col-lg-10">
                     <%= password_field_tag :password, "", class: "form-control", placeholder: "Password" %>   
                  </div>
               </div>
               <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2">
                     <%= button_tag "Sign In", class: "btn btn-success" %>                  
                  </div>
               </div> 
               <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2">
                     <div class="well well-sm"> Not registered? <%= link_to "Create an account", register_path %> 
                     </div>                
                  </div>
               </div> 

               <% end %>

            </div>
         </div>
      </div>
   </div>
</div>
 